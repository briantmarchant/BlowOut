<!DOCTYPE html>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BlowOut Rentals</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link href="~/Content/Style.css" type="text/css" rel="stylesheet" />


   
    
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer class="myFooterText">
            <p>&copy; @DateTime.Now.Year - Brian Marchant</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $(window).scroll(function () { // check if scroll event happened
                if ($(document).scrollTop() > 410)
                { // check if user scrolled more than 500 from top of the browser window
                    $(".navbar-fixed-top").css("background-color", "#f0ad4e"); // if yes, then change the color of class "navbar-fixed-top" to orange (#f0ad4e)
                }
                else if ($(document).scrollTop() > 210) { // check if user scrolled more than 300 from top of the browser window
                    $(".navbar-fixed-top").css("background-color", "#d9534f"); // if yes, then change the color of class "navbar-fixed-top" to red (#d9534f)
                }
                else if ($(document).scrollTop() > 10) { // check if user scrolled more than 10 from top of the browser window
                    $(".navbar-fixed-top").css("background-color", "#5bc0de"); // if yes, then change the color of class "navbar-fixed-top" to sky blue (#5bc0de)
                }
                else
                {
                    $(".navbar-fixed-top").css("background-color", "transparent"); // if not, change it back to transparent
                }
            });
        });
    </script>


