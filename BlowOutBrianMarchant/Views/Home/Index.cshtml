@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container-fluid img-responsive" id="background-home">
    <div class="navbar navbar-default navbar-fixed-top" style="background: none; border: none;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BlowOut", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Rentals", "Index", "Rentals")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="jumbotron" style="background: none;">
        <div class="row">
            <div class="col-md-12">
                <h1>BlowOut Instrument Rentals</h1>
                <p class="lead">We blow our competitors out of the water</p>
                <p>Check out our instrument <a href="@Url.Action("Index", "Rentals")" style="text-shadow:none;" class="btn btn-primary btn-lg">Rentals &raquo;</a></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>Quality Products</h2>
                <p>
                    The instruments that BlowOut rent are of the utmost quality. We pride ourselves in only purchasing from the top
                    manufacturers so that you have the best experience that you can when renting and learning how to play.
                </p>
                <p><a style="text-shadow: none;" class="btn btn-info" href="#">Learn more &raquo;</a></p>
            </div>
            <div class="col-md-4">
                <h2>Unmatched Service</h2>
                <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
                <p><a style="text-shadow: none;" class="btn btn-danger" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
            </div>
            <div class="col-md-4">
                <h2></h2>
                <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
                <p><a style="text-shadow: none;" class="btn btn-warning" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
            </div>
        </div>
    </div>
</div>